<Page
    x:Class="PaatyDSM.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:PaatyDSM"
    mc:Ignorable="d">

    <Grid Background="white">
        <Grid.RowDefinitions>
            <!-- Page_Frame -->
            <RowDefinition Height="*"/>
            <!-- StatusBlock -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Aquí son cargadas todas las páginas del programa -->
        <Frame x:Name="Page_Frame" Grid.Row="0" Margin="0"/>
        <!-- Bloque para mensajes de estado y de error -->
        <Border x:Name="StatusBorder" Grid.Row="1" Visibility="Collapsed">
            <TextBlock x:Name="StatusBlock" Foreground="White" FontWeight="Bold" Margin="12, 10, 12, 10" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Border>
        
    </Grid>
</Page>
